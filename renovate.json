{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "fileMatch": [
        "^snap/snapcraft\\.yaml$"
      ],
      "matchStrings": [
        "version: &cloudflared-version (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "packageNameTemplate": "cloudflare/cloudflared"
    }
  ],
  "extends": [
    "config:recommended",
    "group:all"
  ]
}
